<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |t| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= t.label :status, 'ステータス' %>
        <%= t.text_field :status, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t.label :content, 'タスク' %>
        <%= t.text_field :content, class: 'form-control' %>
      </div>

      <%= t.submit '記録', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
